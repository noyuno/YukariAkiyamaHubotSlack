#!/bin/bash -e

# This script requires root privilege.

service()
{
    user=noyuno
    ret=/var/slack/out/systemd-status
    services=(
        anime-ical
        anime-json
        bluetooth
        cron
        fcgiwrap
        gitbucket
        jmaws
        netdata
        nginx
        nmbd
        ntp
        php5-fpm
        postgresql
        rsyslog
        showterm
        slack
        smbd
        ssh
        ufw
        )
    
    mkdir -p $(dirname $ret)
    touch $ret
    chown -R $user.$user $(dirname $ret)
    (
    for service in ${services[@]}; do
        echo -n $(sudo systemctl is-failed "$service") &&:
        echo " $service"
    done
    ) >$ret
}

service

